<%- include('../partials/header') %>

<link rel="stylesheet" href="/styles.css">
<link rel="stylesheet" href="/styles_typed_colors.css">


<form action="/posts" method="POST" enctype="multipart/form-data" class="content-form" data-media="text">
 <h1>Text upload</h1>
  <input type="hidden" name="media_type" value="text">
  Title: <br>
  <input name="title"><br><br>
  Text: <br>
  <textarea name="content" required></textarea><br><br>
  <button type="submit">Post Text</button>
</form>

<style>
  .content-form[data-media="text"] {
  background-color: hsl(240, 50%, 10%);
  border-top: 4px solid hsl(240, 90%, 50%);
  padding: 1rem;
  border-radius: 12px;
  box-shadow: 0 0 8px hsl(240, 90%, 20%);
  margin: 1rem 0;
}

.content-form[data-media="text"] h1 {
  color: hsl(240, 90%, 50%);
}

.content-form[data-media="text"] label {
  display: block;
  margin: 0.5rem 0 0.2rem;
  color: #eee;
  font-weight: bold;
}

.content-form[data-media="text"] input,
.content-form[data-media="text"] textarea {
  width: 100%;
  background-color: #222;
  border: 1px solid #555;
  color: #fff;
  padding: 0.5rem;
  border-radius: 8px;
  margin-bottom: 0.5rem;
}

.content-form[data-media="text"] button {
  background-color: hsl(240, 90%, 50%);
  color: #fff;
  font-weight: bold;
  padding: 0.5rem 1rem;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  transition: background-color 0.2s ease;
}

.content-form[data-media="text"] button:hover {
  background-color: hsl(240, 90%, 50%);
}

</style>