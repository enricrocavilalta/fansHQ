<div class="space-y-3">
  <label class="block text-sm text-neutral-300">Title</label>
  <input name="title" value="<%= post?.title || '' %>"
         class="w-full rounded-xl bg-neutral-900 border border-neutral-700 text-neutral-100 p-3" />

  <label class="block text-sm text-neutral-300">Body</label>
  <textarea name="body" rows="5" data-autogrow
            class="w-full rounded-xl bg-neutral-900 border border-neutral-700 text-neutral-100 p-3 resize-y"><%= post?.body || '' %></textarea>

  <label class="block text-sm text-neutral-300">Price (â‚¬)</label>
  <input name="price" type="number" step="0.01"
         value="<%= post?.price ?? '' %>"
         class="w-full rounded-xl bg-neutral-900 border border-neutral-700 text-neutral-100 p-3" />
</div>
