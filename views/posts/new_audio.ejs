<%- include('../partials/header') %>
<link rel="stylesheet" href="/styles.css">
<link rel="stylesheet" href="/styles_typed_colors.css">

<form action="/posts" method="POST" enctype="multipart/form-data" class="content-form" data-media="audio">
 
  <input type="hidden" name="media_type" value="audio">
  <input type="hidden" name="display_mode" id="display_mode" value="upload">

 <h1>Audio upload</h1>
  <label>Title:</label><br>
  <input type="text" name="title"><br><br>

  <label>Description:</label><br>
  <textarea name="content"></textarea><br><br>

  <label>Choose how to add audio:</label>
  <div class="mode-selector">
    <div class="mode-box selected" data-mode="upload">
      <strong>UploadðŸ“¤</strong><br>
      <input type="file" name="media_file" accept="audio/*">
    </div>
    <div class="mode-box" data-mode="embed">
      <strong>EmbedðŸ”—</strong><br>
      URL:<br> <input name="media_url" >
    </div>
  </div>

  <label>Thumbnail:</label><br>
  <input type="file" name="thumbnail" accept="image/*"><br><br>

  <button type="submit">Create Audio Post</button>

  <!--<iframe src="/colorpicker" style="width:100%; height:400px; border:none;"></iframe>-->


<style>
  .mode-selector {
    display: flex;
    gap: 1rem;
    margin: 1rem 0;
  }

.mode-box {
  background-color: #222; /* Gray background for unselected */
  border: 2px solid #aaa;
  border-radius: 10px;
  padding: 1rem;
  cursor: pointer;
  opacity: 0.6;
  text-align: center;
  transition: all 0.2s ease;
  color: #eee;
}

  .mode-box.selected {
    border-color:hsl(120, 90%, 50%);
    opacity: 1;
    background-color: hsl(120, 50%, 10%);;
  }

  .mode-box input[type="file"],
  .mode-box textarea {
    margin-top: 0.5rem;
    width: 100%;
  }

  .content-form[data-media="audio"] {
  background-color: hsl(120, 50%, 10%);
  border-top: 4px solid hsl(120, 90%, 50%);
  padding: 1rem;
  border-radius: 12px;
  box-shadow: 0 0 8px rgba(0, 255, 0, 0.1);
  margin: 1rem 0;
}

.content-form[data-media="audio"] h1 {
  color: hsl(120, 90%, 50%);
}

.content-form[data-media] input,
.content-form[data-media] textarea {
  width: 100%;
  background-color: #222;
  border: 1px solid #555;
  color: #fff;
  padding: 0.5rem;
  border-radius: 8px;
  margin-bottom: 0.5rem;
}

.content-form[data-media] label {
  display: block;
  margin: 0.5rem 0 0.2rem;
  color: #eee;
  font-weight: bold;
}

.content-form[data-media] button {
  font-weight: bold;
  padding: 0.5rem 1rem;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  transition: background-color 0.2s ease;
}

</style>

<script>
  const modeBoxes = document.querySelectorAll('.mode-box');
  const displayModeInput = document.getElementById('display_mode');

  modeBoxes.forEach(box => {
    box.addEventListener('click', () => {
      modeBoxes.forEach(b => b.classList.remove('selected'));
      box.classList.add('selected');
      displayModeInput.value = box.dataset.mode;
    });
  });
</script>
